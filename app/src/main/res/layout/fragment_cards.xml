<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/recyclerView"
        />


    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="288dp"
        android:layout_marginLeft="38dp"
        >
        <Button
            android:id="@+id/button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:drawableLeft="@drawable/credit"
            app:backgroundTint="@color/grey"
            android:background="@drawable/back_button"
            >
        </Button>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:textSize="10dp"
            android:text="Freeze card"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="288dp"
        android:layout_marginLeft="128dp"
        >
        <Button
            android:padding="9dp"
            android:drawableLeft="@drawable/store"
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            app:backgroundTint="@color/grey"
            android:background="@drawable/back_button"
            >
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button2"
            android:textSize="10dp"
            android:text="Request card"
            android:id="@+id/text2"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="288dp"
        android:layout_marginLeft="220dp"
        >
        <Button
            android:drawableLeft="@drawable/airtime"
            android:padding="8dp"
            android:id="@+id/button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:backgroundTint="@color/grey"
            android:layout_marginLeft="7dp"
            android:background="@drawable/back_button"            >
        </Button>


        <TextView
            android:id="@+id/text3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button3"
            android:textSize="10dp"
            android:paddingLeft="12dp"
            android:text="Request status"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="288dp"
        android:layout_marginLeft="325dp"
        >
        <Button
            android:padding="8dp"
            android:drawableLeft="@drawable/luku"
            android:id="@+id/button4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:backgroundTint="@color/grey"
            android:background="@drawable/back_button"            >
        </Button>

        <TextView
            android:id="@+id/text4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button4"
            android:textSize="10dp"
            android:paddingLeft="10dp"
            android:text="Manage online"/>

    </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_two"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="425dp"
            android:layout_marginEnd="15dp"
            app:cardBackgroundColor="#323232"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:id="@+id/layoutseemless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/lipa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="14dp"
                    android:text="Enjoy seemless transaction without"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lipa"
                    android:layout_marginLeft="80dp"
                    android:textSize="12dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:text="Charges when paying with TemboCard"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


</RelativeLayout>