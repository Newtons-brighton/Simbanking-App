<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="50dp"
    android:background="@drawable/bottom_sheet_round_button">





    <Button
        android:layout_marginTop="5dp"
        android:layout_width="130dp"
        android:layout_height="7dp"
        android:paddingLeft="2dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/rem"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:text="Unregister device"
          android:textColor="@color/white"
         android:layout_marginLeft="40dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to register device?"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
         android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap register to confirm"
        android:textColor="@color/white"
         android:layout_marginLeft="10dp"
        />
    <Button
        android:id="@+id/reset"
        android:layout_width="365dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="UNREGISTER"
        android:textColor="@color/white"
        app:backgroundTint="@color/Christmas_green"
        android:background="@drawable/rounded_button" />
  <Button
        android:id="@+id/cancel"
        android:layout_width="365dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:text="CANCEL"
        android:textColor="@color/white"
        app:backgroundTint="@color/Christmas_green"
        android:background="@drawable/rounded_button" />

</LinearLayout>