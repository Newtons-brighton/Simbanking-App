<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/info" />


    <TextView
        android:id="@+id/visit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="15dp"
        android:text="Please enter your meter number and amount you want to purchase then click proceed"
        android:textColor="@color/white" />



    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visit"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:text="Meter number"
        android:textColor="@color/white" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="Amount"
        android:textColor="@color/white" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amount"
        android:id="@+id/cardview2"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputamount"
            android:layout_width="400dp"
            android:layout_below="@+id/amount"
            android:layout_height="wrap_content"
            android:hint="0710661252"
            android:textColor="@color/white"
            />
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/selectaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amount"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="180dp"
        android:text="select account"
        android:textColor="@color/white" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectaccount"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_below="@+id/spinner"
        android:id="@+id/proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/proceed_background"
        android:layout_marginTop="70dp"
        android:textAllCaps="false"
        app:backgroundTint="@color/Christmas_green"
        android:text="PROCEED"
        android:textColor="@color/black" />
</RelativeLayout>
