<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="50dp"
    android:background="@drawable/bottom_sheet_round_button">

    <Button
        android:layout_marginTop="5dp"
        android:layout_width="130dp"
        android:layout_height="7dp"
        android:paddingLeft="2dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/rem"
        />

    <TextView
        android:id="@+id/coming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMING SOON"
        android:paddingTop="25dp"
        android:textStyle="bold"
        android:paddingLeft="18dp"
        android:drawableLeft="@drawable/info"
        android:drawablePadding="10dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="28dp"
        android:paddingLeft="18dp"
        android:text="This service is coming soon, so stay.so stay tuned and wait for the next update "
        android:drawablePadding="10dp"
        android:textSize="13dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="365dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="GOT IT"
        android:textColor="@color/white"
        app:backgroundTint="@color/Christmas_green"
        android:background="@drawable/rounded_button"
        ></Button>

</LinearLayout>