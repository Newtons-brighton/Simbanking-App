<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        android:text="Amount"
        android:textColor="#737373"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        />
    <TextView
        android:id="@+id/transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="300dp"
        android:text="Transaction description(Optional)"
        android:textColor="@color/black" />


    <Button
        android:layout_below="@+id/transaction"
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:textSize="13dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/minus"
        android:layout_marginLeft="20dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:text="Remove Description"
        android:textColor="@color/black" />



    <Button
        android:layout_below="@+id/description"
        android:id="@+id/proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/proceed_background"
        android:layout_marginTop="100dp"
        android:textAllCaps="false"
        app:backgroundTint="@color/Christmas_green"
        android:text="PROCEED"
        android:textColor="@color/black" />

</RelativeLayout>