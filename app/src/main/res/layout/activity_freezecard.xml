<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/crdbcard"
        android:layout_width="303dp"
        android:layout_height="193dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="55dp"
        app:cardCornerRadius="20dp"
        android:layout_marginRight="55dp"
        app:cardBackgroundColor="#064917"
        >
        <RelativeLayout
            android:id="@+id/wifilayout"
            android:layout_width="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="23dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wifi"
                android:rotation="360"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="220dp">
            <ImageView
                android:id="@+id/crdblogo"
                android:layout_width="120dp"
                android:rotation="270"
                android:paddingTop="20dp"
                android:layout_height="70dp"
                android:src="@drawable/crdbbbb"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/chip"
                android:layout_width="45dp"
                android:layout_height="53dp"
                android:src="@drawable/chip"
                android:layout_marginLeft="25dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            >

            <ImageView
                android:id="@+id/elephant"
                android:layout_width="290dp"
                android:layout_height="150dp"
                android:rotation="270"
                android:src="@drawable/elephant"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/visalayout"
            android:layout_width="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            >

            <ImageView
                android:id="@+id/visa"
                android:rotation="270"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/visa"
                />
        </RelativeLayout>



        <TextView
            android:id="@+id/tembo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="180dp"
            android:paddingLeft="42dp"
            android:paddingTop="90dp"
            android:rotation="270"
            android:text="Tembo CARD"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/debit"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="225dp"
            android:paddingLeft="5dp"
            android:paddingTop="85dp"
            android:rotation="270"
            android:text="Classic Debit"
            android:textColor="@color/white"
            android:textSize="9dp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/crdbcard"
        android:text="SECURITY"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_one"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="280dp"
        android:layout_centerHorizontal="true"
        android:elevation="800dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#323232"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card off/On"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            android:textSize="20dp"
            />


    </com.google.android.material.card.MaterialCardView>



</RelativeLayout>