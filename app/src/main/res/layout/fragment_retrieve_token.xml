<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/info" />


    <TextView
        android:id="@+id/visit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="15dp"
        android:text="Please enter your meter number to retrieve old tokens"
        android:textColor="@color/white" />



    <TextView
        android:id="@+id/meternumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visit"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:text="Meter number"
        android:textColor="@color/white" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meternumber"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:layout_below="@+id/meternumber"
        android:id="@+id/proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/proceed_background"
        android:layout_marginTop="470dp"
        android:textAllCaps="false"
        app:backgroundTint="@color/Christmas_green"
        android:text="PROCEED"
        android:textColor="@color/black" />
</RelativeLayout>
