<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    style="@style/SCREEN"
    >

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="70dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgView3"
            android:layout_width="43dp"
            android:layout_height="78dp"
            app:srcCompat="@drawable/userp"
            android:layout_marginLeft="30dp"
            />

        <LinearLayout
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:paddingTop="19dp">

            <TextView
                android:id="@+id/txView"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                style="@style/TEXT"
                android:paddingLeft="5dp"
                android:text="Good afternoon,"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/exView"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:paddingLeft="5dp"
                android:paddingTop="0dp"
                android:text="jimmy"
                style="@style/TEXT"
                android:textSize="10sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:background="@drawable/round_button"
            app:backgroundTint="@color/grey"
            android:id="@+id/comment"
            android:layout_width="50dp"
            android:drawableLeft="@drawable/comments"
            android:layout_height="50dp"
            android:paddingLeft="13dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Enter Simbanking Pin"
        android:textSize="18sp"
        />

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <Space
            android:layout_width="75dp"
            android:layout_height="0dp" />


        <!-- Individual digit input views -->
        <View
            android:id="@+id/digit1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="35dp"
            style="@style/SMALL_VIEW"
            />

        <View
            android:id="@+id/digit2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            style="@style/SMALL_VIEW"
            />

        <View
            android:id="@+id/digit3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            style="@style/SMALL_VIEW"
            />

        <View
            android:id="@+id/digit4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            style="@style/SMALL_VIEW"
            />

    </LinearLayout>


    <!-- First Row -->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp"
        > <!-- Add margin between rows -->

        <!-- Button 1 -->
        <Button
            android:id="@+id/button1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:text="1"
            style="@style/BUTTON"
            android:background="@drawable/round_button"
            app:backgroundTint="#2E2E2E"
            />

        <!-- Button 2 -->
        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="43dp"
            android:text="2"
            style="@style/BUTTON"
            android:background="@drawable/round_button"
            app:backgroundTint="#2E2E2E"
            />

        <!-- Button 3 -->
        <Button
            android:id="@+id/button3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="43dp"
            style="@style/BUTTON"
            android:text="3"
            android:background="@drawable/round_button"
            app:backgroundTint="#2E2E2E"
            />
    </LinearLayout>

    <!--Second Row -->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"> <!-- Add margin between rows -->

        <!-- Button 4 -->
        <Button
            android:id="@+id/button4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/round_button"
            app:backgroundTint="#2E2E2E"
            style="@style/BUTTON"
            android:text="4"
            />

        <!-- Button 5 -->
        <Button
            style="@style/BUTTON"
            android:id="@+id/button5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="41dp"
            android:background="@drawable/round_button"
            app:backgroundTint="#2E2E2E"
            android:text="5"
            />

        <!-- Button 6 -->
        <Button
            style="@style/BUTTON"
            android:id="@+id/button6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/round_button"
            app:backgroundTint="#2E2E2E"
            android:text="6"
            />

    </LinearLayout>

    <!--Third Row -->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">


        <!-- Add margin between rows -->
        <!-- Button 7 -->
        <Button
            style="@style/BUTTON"
            android:id="@+id/button7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/round_button"
            app:backgroundTint="#2E2E2E"
            android:text="7"
            />


        <!-- Button 8 -->
        <Button
            style="@style/BUTTON"
            android:id="@+id/button8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="42dp"
            android:background="@drawable/round_button"
            app:backgroundTint="#2E2E2E"
            android:text="8"
            />


        <!-- Button 9 -->
        <Button
            android:id="@+id/button9"
            style="@style/BUTTON"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/round_button"
            android:text="9"
            app:backgroundTint="#2E2E2E"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="82dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:layout_marginLeft="35dp"
        android:paddingRight="16dp">

        <Button
            android:id="@+id/textbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:paddingRight="20dp"
            android:text="Forgot PIN?"
            android:textAllCaps="false"
            android:background="@drawable/empty_background"
            android:textSize="10sp"
            android:textStyle="bold" />


        <!-- Button 0 -->
        <Button
            android:id="@+id/button0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/round_button"
            app:backgroundTint="#2E2E2E"
            style="@style/BUTTON"
            android:text="0"
            />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="148dp"
            android:layout_height="74dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/arrow"
            android:background="@drawable/empty_background"
            android:visibility="gone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        >

        <Button
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:text="Scan to Pay"
            android:textColor="@color/white"
            android:paddingLeft="28dp"
            android:textSize="10sp"
            android:textAlignment="textStart"
            android:drawableTop="@drawable/scanner"
            android:background="@drawable/empty_background"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:text="Locations"
            android:paddingLeft="5dp"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:drawableTop="@drawable/place"
            android:layout_marginLeft="50dp"
            android:background="@drawable/empty_background"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text="More Services"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:paddingLeft="10dp"
            android:drawableTop="@drawable/option"
            android:background="@drawable/empty_background"
            android:layout_marginLeft="50dp"
            android:textAllCaps="false"
            />
    </LinearLayout>

</LinearLayout>