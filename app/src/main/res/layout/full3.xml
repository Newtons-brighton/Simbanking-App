<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Period"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        />


    <LinearLayout
        android:paddingLeft="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        >
    <Button
        android:id="@+id/onemonth"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="1 Months"
        />

    <Button
        android:layout_marginLeft="10dp"
        android:id="@+id/twomonths"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="2 Months"
        />

    <Button
        android:id="@+id/threemonths"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="3 Months" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="150dp"
        >
    <Button
        android:id="@+id/sixmonth"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="6 Months"
        android:textSize="10dp"
        />

    <Button
        android:layout_marginLeft="10dp"
        android:id="@+id/twelvemonths"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="12 Months"
        android:textSize="10dp"
        />

    <Button
        android:id="@+id/custommonths"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Custom"
        android:textSize="10dp"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/period2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Period"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        />




</RelativeLayout>