<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Simbanking" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#09EC09</item>
        <item name="colorPrimaryVariant">@color/center_grey</item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
       </style>

    <style name="SCREEN" >
        <item name="android:background">#121212</item>
    </style>

    <!--TextColor if the dark Mode is on-->
    <style name="TEXT">
